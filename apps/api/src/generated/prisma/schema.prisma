generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model AnalysisResult {
  id          String   @id @default(cuid())
  inputHash   String   @unique
  matchScore  Int      @default(0)
  jobTitle    String   @default("General Application")
  resumeText  String   @db.Text
  jobDescText String   @db.Text
  resultJson  Json
  createdAt   DateTime @default(now())

  @@index([matchScore])
  @@index([createdAt])
}
